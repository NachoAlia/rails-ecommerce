<%=render 'backstore/navBackStore'%>
<%if !@item.nil? %>
<h1>Item card preview</h1>
<div class="d-flex justify-content-center">
  <div class="card" style="width: 18rem; margin-top:50px; align-items:left">
    <%= image_tag @item.image_url, class:'card-image-top' if @item.image_url.attached? %>
    <div class="card-body">
      <h5 class="card-title"><%= @item.name %></h5>
      <p class="card-text"><%="Description: #{@item.description}"%></p>
      <p class="card-text"><%="Price: #{@item.priceUnit}"%></p>
      <p class="card-text"><%="Available" if @item.available %></p>
      <p class="card-text"><%="Not available" if !@item.available %></p>
      <a href="#" class="btn btn-primary">Add to order</a>
    </div>
  </div>
</div>
<%else%>
<h2>Not available</h2>
<%end %>
